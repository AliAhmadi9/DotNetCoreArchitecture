@model ResetPasswordModel

@{
    ViewData["Title"] = "بازیابی رمزعبور";
    Layout = "/Views/Shared/_LoginRegisterLayout.cshtml";
}

<!-- reset password start -->
<section class="row flexbox-container">
    <div class="col-xl-7 col-10">
        <div class="card bg-authentication mb-0">
            <div class="row m-0">
                <!-- left section-login -->
                <div class="col-md-6 col-12 px-0">
                    <div class="card disable-rounded-right d-flex justify-content-center mb-0 p-2 h-100">
                        <div class="card-header pb-1">
                            <div class="card-title">
                                <h4 class="text-center mb-2">رمز عبور خود را بازنشانی کنید</h4>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form class="mb-2" id="frmResetPassword">
                                    <input asp-for="Email" id="Email" type="hidden" value="@Model.Email"/>
                                    <input type="hidden" asp-for="Code" id="Code" value="@Model.Code"/>
                                    <div class="form-group">
                                        <label class="text-bold-700" asp-for="Password"></label>
                                        <input type="password" class="form-control text-left" asp-for="Password" id="Password" placeholder="یک رمز عبور جدید وارد کنید" dir="ltr">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-2">
                                        <label class="text-bold-700" asp-for="ConfirmPassword">تایید رمز عبور جدید</label>
                                        <input type="password" class="form-control text-left" asp-for="ConfirmPassword" id="ConfirmPassword" placeholder="رمز عبور جدید را تکرار کنید" dir="ltr">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" id="btnResetPassword" class="btn btn-primary glow position-relative w-100">بازنشانی رمز عبور<i id="icon-arrow" class="bx bx-left-arrow-alt"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- right section image -->
                <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                    <img class="img-fluid" src="/assets/images/pages/reset-password.png" alt="branding logo">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- reset password ends -->