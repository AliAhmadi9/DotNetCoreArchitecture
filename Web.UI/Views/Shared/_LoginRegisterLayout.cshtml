@using WebFramework.Configuration
<!DOCTYPE html>
<html class="loading" lang="fa" data-textdirection="rtl" dir="rtl">
<!-- BEGIN: Head-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"] - OKR</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/images/ico/favicon.ico" asp-append-version="true">
    <meta name="theme-color" content="#5A8DEE">

    <!-- BEGIN: Vendor CSS-->
    <link rel="stylesheet" type="text/css" href="/assets/vendors/css/vendors.min.css" asp-append-version="true">
    <!-- END: Vendor CSS-->
    <!-- BEGIN: Theme CSS-->
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-extended.css" asp-append-version="true">
    <link href="~/lib/toastr.js/toastr.min.css" asp-append-version="true" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/assets/css/colors.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/assets/css/components.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/assets/css/themes/dark-layout.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/assets/css/themes/semi-dark-layout.css" asp-append-version="true">
    <!-- END: Theme CSS-->
    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="/assets/css/core/menu/menu-types/vertical-menu.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/assets/css/pages/authentication.css" asp-append-version="true">
    <!-- END: Page CSS-->
    <!-- BEGIN: Custom css-->
    <link href="/css/layout/style.css" asp-append-version="true" rel="stylesheet" />
    <!-- END: Custom css-->


</head>
<!-- END: Head-->
<!-- BEGIN: Body-->
<body class="vertical-layout vertical-menu-modern semi-dark-layout 1-column  navbar-sticky footer-static bg-full-screen-image  blank-page blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column" data-layout="semi-dark-layout">
    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- END: Content-->
    <!--modal when ajax request is sending-->
    <div class="modal"></div>
<!-- BEGIN: Vendor JS-->
    <script src="/assets/vendors/js/vendors.min.js" asp-append-version="true"></script>
    <script src="/assets/fonts/LivIconsEvo/js/LivIconsEvo.tools.min.js" asp-append-version="true"></script>
    <script src="/assets/fonts/LivIconsEvo/js/LivIconsEvo.defaults.js" asp-append-version="true"></script>
    <script src="/assets/fonts/LivIconsEvo/js/LivIconsEvo.min.js" asp-append-version="true"></script>
    <!-- BEGIN Vendor JS-->
    <!-- BEGIN: Page Vendor JS-->
    <!-- END: Page Vendor JS-->
    <!-- BEGIN: Theme JS-->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/3.3.4/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/toastr.js/toastr.min.js" asp-append-version="true"></script>
    <script src="/assets/js/scripts/configs/vertical-menu-dark.js" asp-append-version="true"></script>
    <script src="/assets/js/core/app-menu.js" asp-append-version="true"></script>
    <script src="/assets/js/core/app.js" asp-append-version="true"></script>
    <script src="/assets/js/scripts/components.js" asp-append-version="true"></script>
    <script src="/assets/js/scripts/footer.js" asp-append-version="true"></script>


    <script asp-append-version="true">
    $(function() {
        $.ajaxSetup({
            beforeSend: function(xhr) {
                if ('@($"{CookieManager.Get(Context, CookieManager.CookieKeys.JwtToken)}")' != '') {
                    xhr.setRequestHeader("Authorization", 'Bearer @($"{CookieManager.Get(Context, CookieManager.CookieKeys.JwtToken)}")');
                }
            }
        });
    });
    </script>
    <script src="~/js/layout/singin_signup.js" asp-append-version="true"></script>
    <!-- END: Theme JS-->
    <!-- BEGIN: Page JS-->
    <!-- END: Page JS-->

</body>
<!-- END: Body-->
</html>